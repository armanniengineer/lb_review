<div class="panel panel-default">
	<div class="panel-body">
		<div class="row">
			<div class="col-md-4">
				<%= image_tag @youtuber.image.url(:medium) %>
				<div class="table-responsive">
					<table class="table">
						<tbody>
							<tr>
								<td><strong>Title:</strong></td>
								<td><%= @youtuber.title %></td>
							</tr>
							<tr>
								<td><strong>Description:</strong></td>
								<td><%= @youtuber.description %></td>
							</tr>
							<tr>
								<td><strong>Sexuality:</strong></td>
								<td><%= @youtuber.sexuality %></td>
							</tr>
							<tr>
								<td><strong>Rating:</strong></td>
								<td><%=  @youtuber.rating %></td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>

<%= link_to 'Edit', edit_youtuber_path(@youtuber) %> |
<%= link_to 'Back', youtubers_path %>
