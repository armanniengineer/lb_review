<div class="wrap-edit">
    <button class="form-btn-close">
      <%= link_to(@youtuber) do %>
        <i class="far fa-times-circle"></i>
      <% end %>
    </button>

    <div class="edit-form-title">
      <span>Editing Youtuber</span>
    </div>

    <%= form_for @youtuber, html: { multipart: true } do |form| %>
      <div class= "container-form">

        <div class="field input-container">
          <%= form.label :title %><br>
          <%= form.text_field :title, id: :youtuber_title %>
        </div>

        <div class="field input-container">
          <%= form.label :description %><br>
          <%= form.text_area :description, id: :youtuber_description %>
        </div>

        <div class="field input-container">
          <%= form.label :sexuality %><br>
          <%= form.select :category_id, @categories %>
        </div>

        <div class="field input-container">
          <%= form.label :rating %><br>
          <%= form.text_field :rating, id: :youtuber_rating %>
        </div>
        
        <div class="field input-container">
          <%= form.label :image %><br>
          <%= form.file_field :image, id: :youtuber_image %>
        </div>

        <div class="field input-container">
          <%= form.label :link %><br>
          <%= form.url_field :link, id: :youtuber_link %>
        </div>

        <div class="actions">
          <%= form.submit "UPDATE", class:"btn btn-danger"%>
        </div>
      </div>
    <% end %>
</div>